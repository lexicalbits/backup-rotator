{
    "name": "lexicalbits/BackupRotator",
    "description": "Simple tool to stream backups to multiple rotating systems (s3, file, etc)",
    "type": "project",
    "require": {
        "monolog/monolog": "^1.24",
        "aws/aws-sdk-php": "^3.82"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5",
        "mikey179/vfsStream": "^1.6"
    },
    "scripts": {
        "test": "./vendor/bin/phpunit",
        "coverage": "./vendor/bin/phpunit --coverage-text"
    },
    "autoload": {
        "psr-4": {
          "LexicalBits\\BackupRotator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
          "LexicalBits\\BackupRotator\\Test\\": "test/"
        }
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Justin Fargione",
            "email": "justin@lexicalbits.com"
        }
    ]
}
